<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <ImageView
        android:id="@+id/ize"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerInParent="true"
        android:contentDescription="@null"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_play_arrow_white_24"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="76dp"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="@dimen/spacing_bottom_for_fragment"
        android:gravity="bottom"
        android:orientation="vertical"
        android:padding="@dimen/padding_8">

        <LinearLayout
            android:id="@+id/jwz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginBottom="@dimen/margin_32"
            android:clickable="true"
            android:focusable="true"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/wyb"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:background="@null"
                android:clickable="false"
                android:contentDescription="@null"
                android:focusable="false"
                android:padding="@dimen/padding_4"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_like_white_24" />

            <TextView
                android:id="@+id/dat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:clickable="false"
                android:focusable="false"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/text_smallest" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/kfp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginBottom="@dimen/margin_32"
            android:clickable="true"
            android:focusable="true"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/ldf"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:background="@null"
                android:clickable="false"
                android:contentDescription="@null"
                android:focusable="false"
                android:padding="@dimen/padding_4"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_dislike_white_24" />

            <TextView
                android:id="@+id/apx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:clickable="false"
                android:focusable="false"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/text_smallest" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/hss"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginBottom="@dimen/margin_32"
            android:background="?android:selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/yyj"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:background="@null"
                android:clickable="false"
                android:contentDescription="@null"
                android:focusable="false"
                android:padding="@dimen/padding_4"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_comment_white_24" />

            <TextView
                android:id="@+id/myz"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:clickable="false"
                android:focusable="false"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/text_smallest" />

        </LinearLayout>

        <ImageButton
            android:id="@+id/ika"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="end"
            android:layout_marginBottom="@dimen/margin_108"
            android:background="@null"
            android:contentDescription="@null"
            android:padding="@dimen/padding_4"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_share_white_24" />

    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/nql"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/xna"
        android:background="@drawable/drawable_transparent_gradient_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/oqx"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintEnd_toStartOf="@+id/qdr"
            app:layout_constraintStart_toStartOf="parent">

            <TextView
                android:id="@+id/gvt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding_8"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/text_small"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/gjy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/padding_8"
                android:paddingEnd="@dimen/padding_8"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/text_smallest" />

            <TextView
                android:id="@+id/sjd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:drawableStart="@drawable/ic_music_note_white_24"
                android:focusable="true"
                android:gravity="center_vertical"
                android:padding="@dimen/padding_8"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/text_smaller" />

        </LinearLayout>

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/qdr"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="@dimen/margin_8"
            android:background="?android:selectableItemBackgroundBorderless"
            android:padding="@dimen/padding_4"
            android:scaleType="centerCrop"
            android:src="@drawable/avatar"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/oqx"
            app:layout_constraintTop_toTopOf="parent"
            app:shapeAppearanceOverlay="@style/circularImageView"
            app:srcCompat="@drawable/avatar" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/xna"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/spacing_bottom_for_fragment"
        android:background="#FFFFFF" />

</RelativeLayout>