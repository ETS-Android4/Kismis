<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <ImageButton
        android:id="@+id/ntb"
        android:background="?android:selectableItemBackgroundBorderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_8"
        android:alpha="0.8"
        android:contentDescription="@null"
        android:padding="@dimen/padding_8"
        android:src="@drawable/ic_arrow_back_white_24" />

    <ImageView
        android:id="@+id/apd"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerInParent="true"
        android:contentDescription="@null"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_play_arrow_white_24"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_above="@+id/nne"
        android:layout_alignParentEnd="true"
        android:gravity="bottom"
        android:orientation="vertical"
        android:padding="@dimen/padding_8">

        <LinearLayout
            android:id="@+id/kuq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_32"
            android:clickable="true"
            android:focusable="true"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/sgu"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:background="@null"
                android:clickable="false"
                android:contentDescription="@null"
                android:focusable="false"
                android:padding="@dimen/padding_4"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_like_white_24" />

            <TextView
                android:id="@+id/pnv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:clickable="false"
                android:focusable="false"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/text_smallest" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/fmd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_32"
            android:clickable="true"
            android:focusable="true"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/gjc"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:background="@null"
                android:clickable="false"
                android:contentDescription="@null"
                android:focusable="false"
                android:padding="@dimen/padding_4"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_dislike_white_24" />

            <TextView
                android:id="@+id/rir"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:clickable="false"
                android:focusable="false"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/text_smallest" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/sfd"
            android:background="?android:selectableItemBackgroundBorderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_32"
            android:clickable="true"
            android:focusable="true"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/wsg"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:background="@null"
                android:clickable="false"
                android:contentDescription="@null"
                android:focusable="false"
                android:padding="@dimen/padding_4"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_comment_white_24" />

            <TextView
                android:id="@+id/rmn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:clickable="false"
                android:focusable="false"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/text_smallest" />

        </LinearLayout>

        <ImageButton
            android:id="@+id/org"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/margin_8"
            android:background="@null"
            android:contentDescription="@null"
            android:padding="@dimen/padding_4"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_share_white_24" />

    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/nne"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/drawable_transparent_gradient_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/dil"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintEnd_toStartOf="@+id/iez"
            app:layout_constraintStart_toStartOf="parent">

            <TextView
                android:id="@+id/kaw"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding_8"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/text_small"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/kov"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/padding_8"
                android:paddingEnd="@dimen/padding_8"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/text_smallest" />

            <TextView
                android:id="@+id/ajy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center_vertical"
                android:padding="@dimen/padding_8"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/text_smaller"
                app:drawableStartCompat="@drawable/ic_music_note_white_24" />

        </LinearLayout>

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/iez"
            android:background="?android:selectableItemBackgroundBorderless"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="@dimen/margin_8"
            android:padding="@dimen/padding_4"
            android:scaleType="centerCrop"
            android:src="@drawable/avatar"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/dil"
            app:layout_constraintTop_toTopOf="parent"
            app:shapeAppearanceOverlay="@style/circularImageView"
            app:srcCompat="@drawable/avatar" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</RelativeLayout>